@model ContatoModel
@{
    ViewData["Title"] = "Confirmação pagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato @Model.Nome ?</h3>

</div>
<div class="row align-items-center"> 

    <a style="margin: 5px" class="btn btn-outline-primary btn-block" role="button"  asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
   
    <a style="margin: 5px" class="btn btn-outline-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Confirmar exclusão</a>
</div>
